<Window x:Class="Hourglass.CommandLineUsageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Hourglass"
        Title="Hourglass" Width="640" Height="480" MinWidth="320" MinHeight="240">
    <Grid>
        <DockPanel LastChildFill="True">
            <Border DockPanel.Dock="Bottom" Background="#F9F9F9" BorderBrush="#DDDDDD" BorderThickness="0 1 0 0">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Margin="10" Width="100" Height="25" IsDefault="True" IsCancel="True">_Close</Button>
                </StackPanel>
            </Border>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="UsageTextBlock" FontFamily="Consolas, Courier New, Courier" Margin="20" Text="{Binding Source={x:Static local:CommandLine.Usage}}"/>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
